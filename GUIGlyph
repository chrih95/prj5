package prj5;

import CS2114.Shape;
import CS2114.TextShape;
import CS2114.Window;
import java.awt.Color;

/**
 * 
 * @author Chandler Manns
 *
 */
public class GUIGlyph {

    private TextShape songTitle;
    private TextShape songArtist;
    private Shape firstBarHeard;
    private Shape firstBarLiked;
    private Shape secondBarHeard;
    private Shape secondBarLiked;
    private Shape thirdBarHeard;
    private Shape thirdBarLiked;
    private Shape fourthBarHeard;
    private Shape fourthBarLiked;
    private Shape divider;
    private Window window;

    /**
     * Creates a new glyph.
     * 
     * @author Christian Hawkes
     */
    public GUIGlyph(Window window, int xPosition, int yPosition, Song song) {
        this.window = window;

        songTitle = new TextShape(xPosition, yPosition, song.getTitle());
        songTitle.setX(xPosition - (songTitle.getWidth() / 2));
        songTitle.setY(yPosition);
        yPosition = yPosition + songTitle.getHeight();
        songArtist = new TextShape(xPosition, yPosition,
                "by " + song.getArtist());
        songArtist.setX(xPosition - (songArtist.getWidth() / 2));
        songArtist.setY(yPosition);
        yPosition = yPosition + songArtist.getHeight();
        divider = new Shape(xPosition, yPosition, 5, 60, Color.BLACK);
        songTitle.setBackgroundColor(Color.WHITE);
        songArtist.setBackgroundColor(Color.WHITE);
        firstBarHeard = new Shape(xPosition - (song.getHeard()[0]), yPosition,
                song.getHeard()[0], 15, Color.MAGENTA);
        firstBarLiked = new Shape(xPosition + 5, yPosition, song.getLiked()[0],
                15, Color.MAGENTA);
        yPosition = yPosition + 15;
        secondBarHeard = new Shape(xPosition - (song.getHeard()[1]), yPosition,
                song.getHeard()[1], 15, Color.BLUE);
        secondBarLiked = new Shape(xPosition + 5, yPosition, song.getLiked()[1],
                15, Color.BLUE);
        yPosition = yPosition + 15;
        thirdBarHeard = new Shape(xPosition - song.getHeard()[2], yPosition,
                song.getHeard()[2], 15, Color.ORANGE);
        thirdBarLiked = new Shape(xPosition + 5, yPosition, song.getLiked()[2],
                15, Color.ORANGE);
        yPosition = yPosition + 15;
        fourthBarHeard = new Shape(xPosition - song.getHeard()[3], yPosition,
                song.getHeard()[3], 15, Color.GREEN);
        fourthBarLiked = new Shape(xPosition + 5, yPosition, song.getLiked()[3],
                15, Color.GREEN);
        buildGlyph(xPosition, yPosition);
    }

    /**
     * Creates and returns a new square shape.
     */
    public void buildGlyph(int x, int y) {

        window.addShape(songTitle);
        window.moveToFront(songTitle);
        window.addShape(songArtist);
        window.moveToFront(songArtist);
        window.addShape(firstBarHeard);
        window.moveToFront(firstBarHeard);
        window.addShape(firstBarLiked);
        window.moveToFront(firstBarLiked);
        window.addShape(secondBarHeard);
        window.moveToFront(secondBarHeard);
        window.addShape(secondBarLiked);
        window.moveToFront(secondBarLiked);
        window.addShape(thirdBarHeard);
        window.moveToFront(thirdBarHeard);
        window.addShape(thirdBarLiked);
        window.moveToFront(thirdBarLiked);
        window.addShape(fourthBarHeard);
        window.moveToFront(fourthBarHeard);
        window.addShape(fourthBarLiked);
        window.moveToFront(fourthBarLiked);
        window.addShape(divider);
        window.moveToFront(divider);
    }
}
