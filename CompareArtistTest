package prj5;

/**
 * Tests the compare method in the CompareArtist class
 * @author Christian Hawkes
 *
 */
public class CompareArtistTest extends student.TestCase {
    /**
     * A new CompareArtist
     */
    public CompareArtist comparer;
    
    /**
     *A String representing the genre of the song hello 
     */
    public String hello;
    
    /**
     * A String representing the genre of the song yeah
     */
    public String yeah;
    
    /**
     *A new Song 
     */
    public Song songHello;
    
    /**
     * A new Song
     */
    public Song songYeah;
    
    /**
     * Instantiates the comparer and the two songs
     */
    public void setUp() {
        songHello = new Song("Pop", "Adele", "Hello", 2016, 23);
        songYeah = new Song("Hip Hop", "Usher", "Yeah!", 2004, 5);
        hello = songHello.getArtist();
        yeah = songYeah.getArtist();
        comparer = new CompareArtist();
    }
    
    /**
     * Tests the compare method on the two songs when it should
     * return an int less than 0.
     */
    public void testCompareLessThan() {
        assertTrue(comparer.compare(hello, yeah) < 0);
    }
    
    /**
     * Tests the compare method on the two songs when it should
     * return an int greater than 0.
     */
    public void testCompareMoreThan() {
        assertTrue(comparer.compare(yeah, hello) > 0);
    }
    
    /**
     * Tests the compare method on the two songs when it should
     * return 0.
     */
    public void testCompareEqual() {
        assertEquals(0, comparer.compare(hello, hello));
    }

}
